<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="@mipmap/home_category">

    <!--
       android:stretchMode="columnWidth" 缩放与列宽大小同步
       android:columnWidth 每列的宽度
       android:numColumns 有几列
       horizontalSpacing 两列之间的边距
    -->

    <TextView
        android:id="@+id/foodclass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="852"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <com.jiang.foodfaction.MyGridView
        android:id="@+id/foodclass_girdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/foodclass_text"
        android:layout_marginTop="50dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"

        />

</RelativeLayout>