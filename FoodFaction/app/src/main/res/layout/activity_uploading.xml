<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/uploading_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_dark_center"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/uploading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/uploading_return"
        android:text="上传食物"
        android:layout_toRightOf="@id/uploading_return"
        />
    <ListView
        android:id="@+id/uploading_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploading_return"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/uploading_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="上传食物"
        android:background="#FF2D2D"
        android:layout_below="@id/uploading_listView"/>

</RelativeLayout>