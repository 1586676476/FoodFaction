<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mycamera_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_dark_center"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的照片"
        android:layout_toRightOf="@id/mycamera_return"
        android:layout_alignTop="@id/mycamera_return"
        />
    <ImageView
        android:id="@+id/mycamera_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/myphoto_news"
        android:layout_alignTop="@id/mycamera_return"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>