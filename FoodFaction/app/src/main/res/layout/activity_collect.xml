<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/collect_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_dark_center"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/collect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/collect_return"
        android:text="我的收藏"
        android:layout_toRightOf="@id/collect_return"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/collect_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect_return"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/collect_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect_tablayout"/>
</RelativeLayout>