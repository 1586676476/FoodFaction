<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/grideview_details_include"
        layout="@layout/merge" />

    <LinearLayout
        android:id="@+id/nutrient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grideview_details_include">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营养素排序" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrowdown" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grideview_details_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nutrient"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>