<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/search_details_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_dark_center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"/>

        <EditText
            android:id="@+id/search_details_editText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="请输入事物名称"
            android:layout_marginTop="15dp"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/search_details_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/search"
            android:layout_gravity="right"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/search_details_clear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/clear"
            android:layout_marginLeft="-100dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_details_sine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/search_details_linearLayout"
        android:background="#EEEEEE"/>

    <LinearLayout
        android:id="@+id/search_linearLayout_nutrient"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/search_details_sine"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营养素排序"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrowdown"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐食物"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="190dp"
            android:textColor="#CC0000"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_details_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_linearLayout_nutrient"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>



</RelativeLayout>