<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/text_color_white">

    <TextView
        android:id="@+id/knowledge_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="123"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/knowledge_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/knowledge_title"
        android:layout_margin="10dp"
        android:text="456"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/knowledge_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/knowledge_title"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/knowledge_source"
        android:layout_alignTop="@id/knowledge_source"
        android:src="@mipmap/watch" />

    <TextView
        android:id="@+id/knowledge_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/knowledge_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/knowledge_watch"
        android:layout_alignTop="@id/knowledge_source"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/knowledge_images"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
       />

</RelativeLayout>