<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/foodclass_above_details_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foodclass_above_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/back_dark_center" />

        <EditText
            android:id="@+id/foodclass_above_details_editText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请输入事物名称" />

        <ImageView
            android:id="@+id/foodclass_above_details_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@mipmap/search" />
    </LinearLayout>

    <TextView
        android:id="@+id/foodclass_above_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodclass_above_details_linearLayout"
        android:layout_margin="10dp"
        android:text="大家都在搜" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foodclass_above_details_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodclass_above_details_text"
        android:background="#ffffff" />

</RelativeLayout>